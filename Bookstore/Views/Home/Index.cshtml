@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

    <h1 class="display-4">Welcome</h1>

    <div class="row justify-content-center">
        <!-- Центрира реда -->

        <div class="col-md-3">
            <!-- Премахнах 'four', за да се коригира грешката -->
            <div class="counter-box colored">
                <i class="fa fa-thumbs-o-up"></i>
                <span class="counter">@ViewData["Authors"]</span>
                <p>Authors</p>
            </div>
        </div>
        <div class="col-md-3">
            <!-- Премахнах 'four', за да се коригира грешката -->
            <div class="counter-box">
                <i class="fa fa-group"></i>
                <span class="counter">@ViewData["Books"]</span>
                <p>Books</p>
            </div>
        </div>
        <div class="col-md-3">
            <!-- Премахнах 'four', за да се коригира грешката -->
            <div class="counter-box">
                <i class="fa fa-shopping-cart"></i>
                <span class="counter">@ViewData["Genres"]</span>
                <p>Genres</p>
            </div>
        </div>

    </div>

</div>
